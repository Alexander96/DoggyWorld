div.chat-window(ng-repeat="discussion in discussions" ) 
	div.chat-window-header(ng-drag="true" ng-drag-success="onDragComplete($event)" 
	no-reset="true"  use-parent="true") {{discussion.recipient.firstName}}
	div.chat-window-close(ng-click="closeDiscussion(doscussion)") X
	div.chat-window-content(ng-controller="ChatController") {{content}}
