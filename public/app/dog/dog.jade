div.wrapper-dog
	div.dog-left
		div.dog-pic-container
			img#dog-img-change(src="{{dog.url}}")
		div#change-btn-pic.btn-change-dog-field(ng-click="changeTrigger('ProfPhoto')" ng-hide="showChangeProfPhoto") Change
		div(ng-show="showChangeProfPhoto")
			input#input-browse-photo(ng-file-select="onFileSelect($files)" type="file")
			div.btn-change-dog-field(ng-click="browsePhotoTrigger()") Browse Photo
			div.btn-change-dog-field(ng-show="showChangeProfPhoto" ng-click="changeField('ProfPhoto')") Save Change
	div.dog-mid
		div.dog-group
			h2.dog-name {{dog.name}}
			form.dog-change-content(ng-show="showChangeName")
				input.dog-input-field(type="text" placeholder="Change Name" ng-model="name")
				input.btn-change-dog-field(type="submit" value="Change" ng-click="changeField('Name')")
		div.dog-group 
			div.dog-birthdate Birth Date: {{dog.birthDate}}
			form.dog-change-content(ng-show="showChangeBirthDate")
				select.dog-date-selector(ng-model="dog.day" ng-options="opt as opt.label for opt in optionsDay")
				select.dog-date-selector(ng-model="dog.month" ng-options="opt as opt.label for opt in optionsMonth")
				select.dog-date-selector(ng-model="dog.year" ng-options="opt as opt.label for opt in optionsYear")
				input.btn-change-dog-field(type="submit" value="Change" ng-click="changeField('BirthDate')")
		div.dog-group
			div.dog-breed Breed: {{dog.breed}}
			form.dog-change-content(ng-show="showChangeBreed")
				input.dog-input-field(type="text" placeholder="Change Breed" ng-model="breed")
				input.btn-change-dog-field(type="submit" value="Change" ng-click="changeField('Breed')")
		div.dog-group
			div.dog-food
				span foods: 
				div.dog-field-fw(ng-repeat="(indF, f) in dog.food track by $index") {{f}}
					div.delete-field(ng-show="showChangeFood" ng-click="removeFW('f', f)") X
				div.add-fw(ng-show="showChangeFood")
					select.dog-date-selector(ng-model="dog.foodOpt" ng-options="opt as opt.label for opt in optionsFood")
					div.btn-change-dog-field(ng-click="addFW('f')") Add Food
					div.btn-change-dog-field(ng-click="changeField('Food')") Save changes
		div.dog-group
			div.dog-walk
				span walks: 
				div.dog-field-fw(ng-repeat="(indW, w) in dog.walk track by $index") {{w}}
					div.delete-field(ng-show="showChangeWalk" ng-click="removeFW('w', w)") X
				div.add-fw(ng-show="showChangeWalk")
					select.dog-date-selector(ng-model="dog.walkOpt" ng-options="opt as opt.label for opt in optionsWalk")
					div.btn-change-dog-field(ng-click="addFW('w')") Add Walk
					div.btn-change-dog-field(ng-click="changeField('Walk')") Save changes
		div.dog-description 
			div {{dog.description}}
			div.dog-change-content(ng-show="showChangeDescription")
				textarea#description-change(ng-model="description")
				button#textarea-btn.btn-change-dog-field(ng-click="changeField('Description')") Change

	div.dog-right()
		div.btn-change-dog-field(ng-click="changeTrigger('Name')") Change
		div.btn-change-dog-field(ng-click="changeTrigger('BirthDate')") Change
		div.btn-change-dog-field(ng-click="changeTrigger('Breed')") Change
		div.btn-change-dog-field(ng-click="changeTrigger('Food')") Change
		div.btn-change-dog-field(ng-click="changeTrigger('Walk')") Change
		div.btn-change-dog-field(ng-click="changeTrigger('Description')") Change