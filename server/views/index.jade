extends includes/layout
block main-content
    div.nav
        div.left-nav
            ul.nav-bar-ul
                li(ng-include="'partials/main/logo'")
        div.mid-nav
            div(ng-include="'partials/account/search'")
        div.right-nav
            div.float-left(ng-include="'partials/notifications/notifications'")
            div.float-right
                div.nav-login(ng-include="'partials/account/login'")
    div.wrapper#the-wrapper
        div(draggable-chat-dir)
        div.menu(ng-include="'partials/main/menu'")
        div(id="left-menu-dialog")
            div(id="left-dialog-content" ng-include="'partials/main/dialog'")
        div(id="cover")
        div.right-wrapper
            div.content(ng-view)
    div(ng-include="'partials/directives/loading'")